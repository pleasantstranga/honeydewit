<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <!-- SHADOW -->
            <item android:left="4dp" android:top="4dp">
                <shape>
                    <solid android:color="@color/shadow_color" />
                    <corners android:radius="6dip"/>
                    <padding
                        android:right="3dp"
                        android:bottom="3dp"/>
                    <gradient
                        android:startColor="@color/shadow_color"
                        android:endColor="@color/shadow_color"
                        android:angle="270" />
                </shape>
            </item>
            <!-- BUTTON -->
            <item android:bottom="5px">
                <shape>
                    <padding android:bottom="10dp"/>
                    <gradient
                        android:startColor="@color/button_background"
                        android:endColor="@color/button_background"
                        android:angle="270" />
                    <corners
                        android:radius="5dp"/>
                    <padding
                        android:left="10dp"
                        android:top="10dp"
                        android:right="10dp"
                        android:bottom="10dp"/>
                    <stroke android:color="@color/shadow_color" android:width="1dp"></stroke>
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>
            <!-- SHADOW -->
            <item android:left="4dp" android:top="4dp">
                <shape>
                    <solid android:color="@color/shadow_color" />
                    <corners android:radius="6dip"/>
                    <padding
                        android:right="2dp"
                        android:bottom="2dp"/>
                    <gradient
                        android:startColor="@color/backgroundStart"
                        android:endColor="@color/backgroundEnd"
                        android:angle="270" />
                </shape>
            </item>
            <!-- BUTTON -->
            <item android:bottom="5px">
                <shape>
                    <gradient
                        android:startColor="@color/backgroundStart"
                        android:endColor="@color/backgroundEnd"
                        android:angle="270" />
                    <corners
                        android:radius="5dp"/>
                    <padding
                        android:left="10dp"
                        android:top="10dp"
                        android:right="10dp"
                        android:bottom="10dp"/>
                    <stroke android:color="@color/shadow_color" android:width="1dp"></stroke>
                </shape>
            </item>
        </layer-list>
    </item>
</selector><!-- From: file:/Users/aaronbernstein/Documents/workspace/HoneyDewIt/app/src/main/res/drawable/item_background.xml -->