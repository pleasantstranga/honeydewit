<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.honeydewit.errorhandling.ExceptionActivity">

    <TextView android:text="@string/unexpectedError" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:weightSum="1.0"
        style="?android:buttonBarStyle">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sendReport"
            android:id="@+id/sendReportBtn"
            android:layout_weight=".5"
            style="?android:buttonBarButtonStyle"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/goHome"
            android:id="@+id/goHomeBtn"
            android:layout_weight=".5"
            style="?android:buttonBarButtonStyle"/>

    </LinearLayout>


</RelativeLayout>
