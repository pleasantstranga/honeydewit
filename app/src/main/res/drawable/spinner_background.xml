<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>

            <!-- BUTTON -->
            <item android:bottom="5px">
                <shape>
                    <padding android:bottom="10dp"/>
                    <gradient android:angle="270" android:endColor="@color/button_background" android:startColor="@color/button_background" />
                    <corners
                        android:radius="5dp"/>
                    <stroke android:width="1dp" android:color="@color/shadow_color"></stroke>
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>

            <!-- BUTTON -->
            <item android:bottom="5px">
                <shape>
                    <gradient android:angle="270" android:endColor="@color/backgroundEnd" android:startColor="@color/backgroundStart" />
                    <corners
                        android:radius="5dp"/>
                    <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
                    <stroke android:width="1dp" android:color="@color/shadow_color"></stroke>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>