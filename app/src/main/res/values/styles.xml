<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="drawerStyle">
        <item name="android:textColor">@color/edit_text_color</item>
        <item name="android:gravity">fill</item>
        <item name="android:fontFamily">fonts/RobotoCondensed-Regular.ttf</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:divider">@color/shadow_color</item>
        <item name="android:dividerHeight">1sp</item>


    </style>
    <style name="goButtonStyle">
        <item name="android:textColor">@color/gobuttontextcolor</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">fonts/RobotoCondensed-Regular.ttf</item>
        <item name="android:background">@drawable/go_button_background</item>
    </style>


    <style name="scrollbar_shape_style">
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:fadeScrollbars">true</item>
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar_vertical_thumb</item>
        <item name="android:scrollbarTrackVertical">@drawable/scrollbar_vertical_track</item>
        <item name="android:scrollbarSize">5dp</item>

    </style>
    <style name="textview_style" parent="android:Widget.TextView">
        <item name="android:textColor">@color/edit_text_color</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:fontFamily">fonts/RobotoCondensed-Regular.ttf</item>
    </style>

    <style name="edittext_style" parent="android:Widget.Holo.Light.EditText">
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:background">@drawable/edittextbasestyle</item>
        <item name="android:padding">4dp</item>
        <item name="android:fontFamily">fonts/RobotoCondensed-Regular.ttf</item>

    </style>
    <style name="button_style" parent="android:Widget.Button">
        <item name="android:textColor">@color/edit_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:fontFamily">fonts/RobotoCondensed-Regular.ttf</item>
        <item name="android:minHeight">@dimen/default_button_size</item>
    </style>
    <style name="image_button_style" parent="android:Widget.ImageButton">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button_background</item>
    </style>
    <style name="HoneyDewActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/actionbar_background</item>
        <item name="android:titleTextStyle">@style/actionbartext</item>
        <item name="android:actionMenuTextColor">@color/edit_text_color</item>
    </style>
    <style name="HoneyDewActionBarLarge" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/actionbar_background</item>
        <item name="android:titleTextStyle">@style/actionbartextlarge</item>
        <item name="android:actionMenuTextColor">@color/edit_text_color</item>
        <item name="android:height">150dp</item>
    </style>
    <style name="actionbartext" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/edit_text_color</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:fontFamily">fonts/RobotoCondensed-Regular.ttf</item>
    </style>
    <style name="actionbartextlarge" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/edit_text_color</item>
        <item name="android:textSize">@dimen/default_text_size_large</item>
        <item name="android:fontFamily">fonts/RobotoCondensed-Regular.ttf</item>
    </style>

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">@style/ButtonBar</item>
        <item name="metaButtonBarButtonStyle">@style/ButtonBarButton</item>
    </style>

    <!-- Backward-compatible version of ?android:attr/buttonBarStyle -->
    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <!-- Backward-compatible version of ?android:attr/buttonBarButtonStyle -->
    <style name="ButtonBarButton" />


    <style name="dialog_title_style" parent="android:Widget.TextView">
        <item name="android:background">@drawable/dialog</item>
    </style>


    <style name="listViewStyle" parent="android:style/Widget.ListView">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:divider">@drawable/background_gradient</item>
        <item name="android:dividerHeight">10.0sp</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:fadeScrollbars">false</item>
    </style>
    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/spinner_image</item>
        <item name="android:dropDownSelector">@drawable/bg_handle</item>
        <item name="android:spinnerMode">dialog</item>
    </style>
    <style name="CheckboxStyle">
        <item name="android:background">@drawable/custom_checkbox_design</item>
    </style>
    <style name="RadioButtonStyle">
        <item name="android:background">@drawable/radiobutton_custom</item>
    </style>
</resources>